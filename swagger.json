    "api/auth/signup": {
      "post": {
        "tags": ["Auth"],
        "summary": "Registration's endpoint",
        "security": [{ "Bearer": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {},
              "example": {
                "name": "userName",
                "email": "1@mail.com",
                "password": "12345678"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "User created",
            "content": {
              "application/json": {
                "schema": {
                  "example": {
                    "status": "success",
                    "code": 201,
                    "data": {
                      "id": "1",
                      "name": "userName",
                      "email": "1@mail.com"
                    }
                  }
                }
              }
            }
          },
          "409": {
            "description": "User with this email already exist",
            "content": {
              "application/json": {
                "example": {
                  "status": "error",
                  "code": 409,
                  "message": "Email in Use"
                }
              }
            }
          }
        }
      }
    },
    "api/auth/login": {
