  "paths": {
    "api/auth/signup": {
      "post": {
        "tags": ["Auth"],
        "summary": "Registration's endpoint",
        "security": [{ "Bearer": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
              },
              "example": {
                "name": "userName",
                "email": "1@mail.com",
                "password": "12345678"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "User created",
            "content": {
              "application/json": {
                "schema": {
                  "example": {
                    "status": "success",
                    "code": 201,
                    "data": {
                      "id": "1",
                      "name": "userName",
                      "email": "1@mail.com"
                    }
                  }
                }
              }
            }
          },
          "409": {
            "content": {
              "application/json": {
                "example": {
                  "status": "error",
                  "code": 409,
                  "message": "Email in Use"
                }
              }
            }
          }
        }
      }
    },
    "api/auth/login": {
      "post": {
        "tags": ["Auth"],
        "summary": "Authentication endpoint",
        "security": [{ "Bearer": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RegistrationResponse"
              },
              "example": {
                "email": "1@mail.com",
                "password": "12345678"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "example": {
                    "status": "success",
                    "code": 200,
                    "data": {
                      "token": "eyJhbGcJIUzI1N5cCI9.eyJfaWQiOiI2MWU3MjFjDgxZiOjE.yCUUpXPEYUuX4Ggj51W0",
                      "email": "1@mail.com",
                      "name": "userName"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "content": {
              "application/json": {
                "example": {
                  "code": 401,
                  "message": "Bad Credentials"
                }
              }
            }
          }
        }
      }
    },
    "api/auth/logout": {
      "get": {
        "tags": ["Auth"],
        "summary": "Logout endpoint",
        "parameters": [
          {
            "name": "Authorization",
            "in": "header",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Token issued to the current user"
          }
        ],
        "security": [{ "Bearer": [] }],
        "responses": {
          "204": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "example": {
                    "status": "success",
                    "code": 204
                  }
                }
              }
            }
          },
          "401": {
            "content": {
              "application/json": {
                "example": {
                  "code": 401,
                  "message": "Not authorized"
                }
              }
            }
          }
        }
      }
    },
    "api/auth/google": {
      "get": {
        "tags": ["Auth"],
        "summary": "Google authorization endpoint",
        "security": [{ "Bearer": [] }],
        "requestBody": {
          "required": true
        },
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "example": {
                    "token": "Bearer {token}"
                  }
                }
              }
            }
          }
        }
      }
    },
    "api/user/balance": {
      "get": {
        "tags": ["User"],
        "summary": "User balance endpoint",
        "security": [{ "Bearer": [] }],
        "requestBody": {
          "description": "Get user balance",
          "required": true,
          "content": {
            "application/json": {
            }
          }
        },
        "responses": {
          "200": {
            "description": "Balance received",
            "content": {
              "application/json": {
                "example": {
                  "status": "success",
                  "code": 200,
                  "data": {
                    "balance": 1000
                  }
                }
              }
            }
          }
        }
      },
      "patch": {
        "tags": ["User"],
        "summary": "Change balance endpoint",
        "security": [{ "Bearer": [] }],
        "requestBody": {
          "description": "Patch user balance. Changing the user`s field isFirstLogin. The body must contain the value of the field with the amount of sums",
          "required": true,
          "content": {
            "application/json": {
            }
          }
        },
        "responses": {
          "200": {
            "description": "Balance received",
            "content": {
              "application/json": {
                "example": {
                  "status": "success",
                  "code": 200,
                  "data": {
                    "balance": "Number"
                  }
                }
              }
            }
          },
          "400": {
            "content": {
              "application/json": {
                "example": {
                  "code": 400,
                  "message": "Balance should be a number"
                }
              }
            }
          }
        }
      }
    },
    "api/category/incomes": {
      "get": {
        "tags": ["Category"],
        "summary": "Category incomes endpoint",
        "security": [{ "Bearer": [] }],
        "requestBody": {
          "description": "get all categories for Income",
          "required": true,
          "content": {
            "application/json": {
            }
          }
        },
        "responses": {
          "200": {
            "description": "Balance received",
            "content": {
              "application/json": {
                "example": {
                  "status": "success",
                  "code": 200,
                  "data": "categories"
                }
              }
            }
          },
          "401": {
            "content": {
              "application/json": {
                "example": {
                  "code": 401,
                  "message": "Choose right categories"
                }
              }
            }
          }
        }
      }
    },
    "api/category/expenses": {
      "get": {
        "tags": ["Category"],
        "summary": "Category expenses endpoint",
        "security": [{ "Bearer": [] }],
        "requestBody": {
          "description": "Get all categories for Expenses",
          "required": true,
          "content": {
            "application/json": {
            }
          }
        },
        "responses": {
          "200": {
            "description": "Balance received",
            "content": {
              "application/json": {
                "example": {
                  "status": "success",
                  "code": 200,
                  "data": "categories"
                }
              }
            }
          },
          "401": {
            "content": {
              "application/json": {
                "example": {
                  "code": 400,
                  "message": "Choose right categories"
                }
              }
            }
          }
        }
      }
    },
    "api/transactions/": {
      "post": {
        "tags": ["Transactions"],
        "summary": "Add transactions endpoint",
        "parameters": [
          {
            "name": "Transactions",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "security": [{ "Bearer": [] }],
        "responses": {
          "201": {
            "content": {
              "application/json": {
                "example": {
                  "status": "success",
                  "code": 201,
                  "message": {
                    "date": "String",
                    "isExpense": "Boolean",
                    "description": "String",
                    "transactionAmount": "Number",
                    "amount": "String",
                    "category": "id"
                  }
                }
              }
            }
          },
          "400": {
            "content": {
              "application/json": {
                "example": {
                  "code": 400,
                  "message": "Amount should be a number"
                }
              }
            }
          }
        }
      },
      "get": {
        "tags": ["Transactions"],
        "summary": "Get all income categories endpoint",
        "security": [{ "Bearer": [] }],
        "requestBody": {
          "description": "Get list of income for the current date/or for the current month",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "example": "month - amount"
              }
            }
          }
        },
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "example": {
                  "status": "success",
                  "code": 200,
                  "data": "{transaction}"
                }
              }
            }
          }
        }
      }
    },
    "api/transactions/:transactionId": {
      "delete": {
        "tags": ["Transactions"],
        "summary": "Delete transaction endpoint",
        "security": [{ "Bearer": [] }],
        "responses": {
          "200": {
            "description": "Delete transaction by id",
            "content": {
              "application/json": {
                "example": {
                  "status": "success",
                  "code": 200,
                  "data": "{transactions}"
                }
              }
            }
          }
        }
      }
    },
