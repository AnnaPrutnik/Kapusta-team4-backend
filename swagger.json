        "tags": ["Auth"],
        "summary": "Authentication endpoint",
        "security": [{ "Bearer": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RegistrationResponse"
              },
              "example": {
                "email": "1@mail.com",
                "password": "12345678"
              }
