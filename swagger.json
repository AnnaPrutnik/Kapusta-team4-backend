    "api/transactions/:transactionId": {
      "delete": {
        "tags": ["Transactions"],
        "summary": "Delete transaction id",
        "parameters": [],
        "security": [{ "Bearer": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ReportsBalanceResponse"
              }
            }
          }
        },
        "200": {
          "description": "Transaction is deleted",
          "content": {
            "application/json": {
              "example": {
                "status": "success",
                "code": 200,
                "message": "transaction deleted",
                "result": {
                  "date": {
                    "day": "day",
                    "month": "month",
                    "year": "year"
                  },
                  "_id": "id",
                  "type": "type",
                  "amount": 77777,
                  "category": "food",
                  "balance": 777,
                  "owner": "",
                  "createdAt": "createdAt",
                  "updatedAt": "updatedAt"
                }
              }
            }
          }
        },
        "responses": {
          "404": {
            "description": "Transaction not found"
          }
        }
      }
    },
